<UserControl x:Class="Cortana_Quick.NoteControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="110" d:DesignWidth="381.481"
    HorizontalAlignment="Left">

    <Grid x:Name="LayoutRoot" Background="Transparent" HorizontalAlignment="Left" Width="381">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <TextBox Height="72" Margin="1,0,3,0" TextWrapping="Wrap" Text="{Binding note}" VerticalAlignment="Top" Grid.Column="1"/>
        <TextBlock Margin="0,72,0,0" Text="{Binding date}" VerticalAlignment="Top" Grid.Column="1" Height="27" HorizontalAlignment="Left" Width="321"/>
    </Grid>
</UserControl>