<UserControl x:Class="Cortana_Quick.NoteControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="110" d:DesignWidth="480">

    <Grid x:Name="LayoutRoot" Background="{StaticResource PhoneChromeBrush}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="11*"/>
            <ColumnDefinition Width="218*"/>
            <ColumnDefinition Width="11*"/>
        </Grid.ColumnDefinitions>
        <TextBox Height="72" Margin="10,0" TextWrapping="Wrap" Text="{Binding note}" VerticalAlignment="Top" Grid.ColumnSpan="3"/>
        <TextBlock Margin="248,77,0,0" TextWrapping="{Binding date}" Text="dd/MM/yyyy hh/mm" VerticalAlignment="Top" Grid.Column="1" Height="27"/>
    </Grid>
</UserControl>