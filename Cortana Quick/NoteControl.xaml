<UserControl x:Class="Cortana_Quick.NoteControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="70" d:DesignWidth="376"
    HorizontalAlignment="Left">

    <Grid x:Name="LayoutRoot" Background="Transparent" Margin="0,0,-5,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="376*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Margin="9,40,49,0" Text="{Binding date}" VerticalAlignment="Top" Grid.Column="1" Height="27" FontSize="14"/>
        <TextBlock Margin="9,5,10,0" TextWrapping="Wrap" Text="{Binding note}" VerticalAlignment="Top" Height="35" FontSize="28" Grid.Column="1"/>
        <Rectangle Grid.Column="1" Fill="#FFF4F4F5" Height="5" Margin="9,65,5,0" VerticalAlignment="Top"/>
    </Grid>
</UserControl>