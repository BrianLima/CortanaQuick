<UserControl x:Class="Cortana_Quick.NoteControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    d:DesignHeight="70" d:DesignWidth="376"
    HorizontalAlignment="Left">

    <Grid x:Name="LayoutRoot" Background="Transparent" HorizontalAlignment="Left" Width="381" Margin="0,0,0,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0*"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="0*"/>
        </Grid.ColumnDefinitions>
        <TextBlock Margin="10,40,0,-11" Text="{Binding date}" VerticalAlignment="Top" Grid.Column="1" Height="27" HorizontalAlignment="Left" Width="321" FontSize="14"/>
        <TextBlock Grid.ColumnSpan="2" HorizontalAlignment="Left" Margin="10,5,0,0" TextWrapping="Wrap" Text="{Binding note}" VerticalAlignment="Top" Height="35" Width="361" FontSize="28"/>
    </Grid>
</UserControl>