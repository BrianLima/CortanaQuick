                <CompositeTransform Rotation="-35.674" TranslateX="-3.68" TranslateY="4.957" SkewX="-3.662"/>
            </es:RegularPolygon.RenderTransform>
        </es:RegularPolygon>

        <es:Arc ArcThickness="9" ArcThicknessUnit="Pixel" EndAngle="3" Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="53.175" Stretch="None" Stroke="Black" StartAngle="-75" UseLayoutRounding="False" VerticalAlignment="Top" Width="80.056" StrokeThickness="0" Margin="8.972,18.6,0,0" RenderTransformOrigin="0.5,0.5">
            <es:Arc.RenderTransform>
                <CompositeTransform SkewX="0.204" TranslateX="7.189" Rotation="-18.434" TranslateY="2.597" SkewY="7.398"/>
            </es:Arc.RenderTransform>
        </es:Arc>
        <Ellipse Fill="#FFF4F4F5" HorizontalAlignment="Left" Height="6" Margin="10,0,0,0" Stroke="Black" StrokeThickness="0" VerticalAlignment="Top" Width="6"/>

    </Grid>
</UserControl>