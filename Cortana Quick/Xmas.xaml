    <Grid x:Name="LayoutRoot" Background="Transparent">

        <es:RegularPolygon Fill="#FFBB0B0B" HorizontalAlignment="Left" Height="39.246" InnerRadius="1" Margin="5.098,-6.162,0,0" PointCount="3" Stretch="Fill" Stroke="Black" StrokeThickness="0" UseLayoutRounding="False" VerticalAlignment="Top" Width="41.822" RenderTransformOrigin="0.5,0.5">
