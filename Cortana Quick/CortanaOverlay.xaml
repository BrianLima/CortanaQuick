<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Cortana_Quick" x:Class="Cortana_Quick.CortanaOverlay"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}" d:DesignWidth="480" Height="215">

    <Grid x:Name="LayoutRoot" Background="{StaticResource PhoneChromeBrush}" Height="215" VerticalAlignment="Top">
        <TextBlock Margin="10,90,10,0" TextWrapping="Wrap" Text="{Binding Title}" VerticalAlignment="Top" Foreground="{StaticResource PhoneAccentBrush}" FontSize="36"/>
        <TextBlock Margin="10,140,10,0" TextWrapping="Wrap" Text="{Binding Message}" VerticalAlignment="Top" Height="35" FontSize="24"/>
        <TextBlock Margin="10,180,10,0" TextWrapping="Wrap" Text="{Binding Confirmation}" VerticalAlignment="Top" Height="30"/>
        <local:CortanaCircle HorizontalAlignment="Left" VerticalAlignment="Top" Height="85" Width="85" Margin="0,10,0,0"/>
    </Grid>
</UserControl>