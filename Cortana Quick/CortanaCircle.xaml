<UserControl x:Class="Cortana_Quick.CortanaCircle"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}" Height="105" Width="105">

    <Grid x:Name="LayoutRoot" Background="{StaticResource PhoneChromeBrush}">
        <Ellipse Stroke="{StaticResource PhoneAccentBrush}" Margin="10" StrokeThickness="12" Opacity="0.395"/>
        <Ellipse Margin="22,22,21,22" StrokeThickness="7">
            <Ellipse.Stroke>
                <SolidColorBrush Color="{StaticResource PhoneAccentColor}"/>
            </Ellipse.Stroke>
        </Ellipse>
    </Grid>
</UserControl>